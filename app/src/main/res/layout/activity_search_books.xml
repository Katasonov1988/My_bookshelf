<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B0B0B"
    tools:context=".ui.SearchBooksActivity">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_search_book"
        style="@style/TextInputLayoutStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textColor="#E6E6E6"
        android:background="#0B0B0B"
        app:hintTextColor="#7A7A7A"
        android:textColorHint="#5A5A5A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <EditText
            android:id="@+id/ed_search_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="поиск вашей книги"
            android:imeOptions="actionSearch"
            android:inputType="textNoSuggestions"
            android:selectAllOnFocus="true"
            android:textColor="#ECEBEB"
            app:boxStrokeColor="#7A7A7A"
            app:boxStrokeWidth="1dp"
            android:textCursorDrawable="@color/cursor_input_layout_search_book"
            tools:text="Онегин" />
    </com.google.android.material.textfield.TextInputLayout>

    <View
        android:id="@+id/viewLineActivitySearchNote"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:background="#707070"
        android:backgroundTint="#979797"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/til_search_book"
        app:layout_constraintStart_toStartOf="parent"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerviewBooks"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        app:layoutManager="LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewLineActivitySearchNote"
        tools:ignore="UnusedAttribute"
        tools:listitem="@layout/book_info_item"
        />

</androidx.constraintlayout.widget.ConstraintLayout>